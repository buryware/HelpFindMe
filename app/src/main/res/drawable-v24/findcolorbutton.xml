<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="90"
                android:startColor="#100880"
                android:endColor="#83f9ff" />
            <stroke
                android:width="2dp"
                android:color="#303030" />
            <corners
                android:radius="9dp" />
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <gradient
                android:angle="270"
                android:endColor="#440050"
                android:startColor="#0F00E0" />
            <stroke
                android:width="2dp"
                android:color="#303030" />
            <corners
                android:radius="9dp" />
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:angle="270"
                android:endColor="#003450"
                android:startColor="#8DA9EF" />
            <stroke
                android:width="2dp"
                android:color="#303030" />
            <corners
                android:radius="9dp" />
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
        </shape>
    </item>
</selector>